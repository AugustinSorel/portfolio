---
import Button from "./ui/button.astro";
---

<header class="flex items-center justify-between px-max-width py-4">
  <span class="">AS</span>
  <Button
    variant="icon"
    size="icon"
    aria-label="toggle theme"
    id="theme-switcher"
  />
</header>

<script>
  const themeSwitcher = document.getElementById("theme-switcher");

  if (!themeSwitcher) {
    throw new Error("Theme switcher button not found");
  }

  const setThemeSwitcherIcon = () => {
    const isDarkTheme = document.body.classList.contains("dark");

    themeSwitcher.innerHTML = `
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class='fill-none stroke-current stroke-2 h-5 w-5'>
        ${
          isDarkTheme
            ? '<circle cx="12" cy="12" r="4"/><path d="M12 2v2"/><path d="M12 20v2"/><path d="m4.93 4.93 1.41 1.41"/><path d="m17.66 17.66 1.41 1.41"/><path d="M2 12h2"/><path d="M20 12h2"/><path d="m6.34 17.66-1.41 1.41"/><path d="m19.07 4.93-1.41 1.41"/> '
            : "<path d='M12 3a6 6 0 0 0 9 9 9 9 0 1 1-9-9Z' />"
        }
      </svg>
    `;
  };

  themeSwitcher.addEventListener("click", () => {
    document.body.classList.toggle("dark");
    const isDarkTheme = document.body.classList.contains("dark");
    localStorage.setItem("theme", isDarkTheme ? "dark" : "light");

    setThemeSwitcherIcon();
  });

  const theme = localStorage.getItem("theme");

  if (theme === "dark") {
    document.body.classList.add("dark");
  }

  if (theme === "light") {
    document.body.classList.remove("dark");
  }

  setThemeSwitcherIcon();
</script>
