---
import { type VariantProps, cva } from "class-variance-authority";
import { cn } from "../../utils/style";
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"strong"> & VariantProps<typeof strongVariants>;

const { size, variant, class: className, ...rest } = Astro.props;

const strongVariants = cva("", {
  variants: {
    variant: {
      default: "font-normal text-accent-foreground",
    },
    size: {
      default: "",
    },
  },
  defaultVariants: {
    variant: "default",
    size: "default",
  },
});
---

<strong
  class={cn(strongVariants({ variant, size, class: className }))}
  {...rest}
>
  <slot />
</strong>
